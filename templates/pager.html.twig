{% if pager.getLastPage() > 1 %}
    <ul class="pagination">
        {% if pager.isPreviousPage() %}
            <li class="page-item"><a class="page-link" href="?page={{ pager.page - 1 }}&limit={{ pager.maxPerPage }}">«</a></li>
        {% else %}
            <li class="page-item disabled"><a class="page-link" href="#">«</a></li>
        {% endif %}
        {% for i in 1..pager.lastPage %}
            {% if i == pager.page %}
                <li class="page-item active"><a class="page-link" href="#">{{ pager.page }} <span class="sr-only">(current)</span></a></li>
            {% else %}
                <li class="page-item" ><a class="page-link" href="?page={{ i }}&limit={{ pager.maxPerPage }}">{{ i }}</a></li>
            {% endif %}
        {% endfor %}
        {% if pager.isNextPage() %}
            <li class="page-item"><a class="page-link" href="?page={{ pager.page + 1 }}&limit={{ pager.maxPerPage }}">»</a></li>
        {% else %}
            <li class="page-item disabled"><a class="page-link" href="#">»</a></li>
        {% endif %}
    </ul}
{% endif %}
