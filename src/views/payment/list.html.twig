{% extends "layout.html.twig" %}

{% block content %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Pay√©</th>
            </tr>
        </thead>
        <tbody>
            {% for payment in pager.collection %}
                <tr>
                    <td>{{ payment.id }}</td>
                    <td>{{ payment.created | date('d/m/Y') }}</td>
                    <td>
                        <span class="glyphicon glyphicon-{{ payment.done ? 'check' : 'unchecked' }}"></span>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ include('pager.html.twig', { 'pager': pager }) }}
{% endblock %}
