{% extends "layout.html.twig" %}

{% block content %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="/payments/add" title="Nouveau remboursement">
            <span class="glyphicon glyphicon-plus-sign"></span>
        </a>
        <hr />
    {% endif %}

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Montant</th>
                <th>Remboursé</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            {% for payment in pager.iterator %}
                <tr>
                    <td>{{ payment.id }}</td>
                    <td>{{ payment.created | date('d/m/Y') }}</td>
                    <td>{{ payment.amount | number_format(2) }}</td>
                    <td>
                        <span class="glyphicon glyphicon-{{ payment.done ? 'check' : 'unchecked' }}"></span>
                    </td>
                    <td>
                        <a href="/payments/{{ payment.id }}/edit" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span></a>
                        <a onclick="return confirm('Êtes vous sûr ?');" href="/payments/{{ payment.id }}/delete" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ include('pager.html.twig', { 'pager': pager }) }}
{% endblock %}
